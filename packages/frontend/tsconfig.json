{
  "extends": "../../tsconfig.json",
  "include": ["env.d.ts", "src/**/*", "../../contracts/**/*"],
  "compilerOptions": {
    "composite": true,
    "paths": {
      "@/*": ["./src/*"],
      "@contracts/*": ["../../contracts/*"],
      "@gateway/*": ["./src/gateway/*"]
    },
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "references": [{ "path": "../../contracts" }]
}
